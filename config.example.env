# Interview Assistant Environment Variables
# Copy this file to .env and fill in your actual API keys

# === API KEYS ===
# Deepgram API для речи-в-текст (получить на console.deepgram.com)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# OpenAI API для Whisper транскрипции (получить на platform.openai.com)
# АЛЬТЕРНАТИВА Deepgram с лучшим качеством ($0.006/мин)
OPENAI_API_KEY=your_openai_api_key_here

# Claude API для AI анализа (получить на console.anthropic.com) 
CLAUDE_API_KEY=your_claude_api_key_here

# Post-Editor API для коррекции ASR (может использовать тот же ключ что и Claude)
POST_EDITOR_API_KEY=your_claude_api_key_here

# === DEEPGRAM SETTINGS ===
# Оптимизированные настройки для скорости и качества
DEEPGRAM_MODEL=nova-2-meeting
DEEPGRAM_LANGUAGE=multi
DEEPGRAM_PUNCTUATION=true
DEEPGRAM_INTERIM_RESULTS=true
DEEPGRAM_SMART_FORMAT=true

# Параметры для улучшения скорости распознавания
DEEPGRAM_ENDPOINTING=300
DEEPGRAM_VAD_EVENTS=true
DEEPGRAM_NO_DELAY=true
DEEPGRAM_INTERIM_PERIOD=100

# IT-термины для лучшего распознавания (автоматически генерируются)
# DEEPGRAM_KEYWORDS=React:10,JavaScript:10,TypeScript:10,...

# === OPENAI WHISPER SETTINGS ===
# Настройки для РЕАЛЬНОГО OpenAI Whisper API (альтернатива Deepgram)
OPENAI_WHISPER_MODEL=whisper-1
OPENAI_WHISPER_TEMPERATURE=0.0
OPENAI_WHISPER_LANGUAGE=
OPENAI_WHISPER_PROMPT=This is a technical interview. Terms may include: API, React, TypeScript, Docker, Kubernetes, DevOps, CI/CD, machine learning, microservices, architecture, development.

# === CLAUDE SETTINGS ===
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=300
CLAUDE_TEMPERATURE=0.3

# === POST-EDITOR SETTINGS ===
# Модель для быстрой коррекции (рекомендуется Haiku для скорости)
POST_EDITOR_MODEL=claude-3-haiku-20240307
POST_EDITOR_MAX_TOKENS=150
POST_EDITOR_TEMPERATURE=0.1
POST_EDITOR_MAX_RPS=1
POST_EDITOR_TIMEOUT_MS=250
POST_EDITOR_ENABLED=true

# === AUDIO SETTINGS ===
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_ECHO_CANCELLATION=true
AUDIO_NOISE_SUPPRESSION=true
AUDIO_AUTO_GAIN_CONTROL=true
AUDIO_CHUNK_SIZE=250

# === UI SETTINGS ===
UI_INSIGHT_FREQUENCY_MS=3000
UI_MIN_INSIGHT_CONFIDENCE=0.6
UI_TRANSCRIPT_BUFFER_WORDS=600
UI_MAX_INSIGHTS_DISPLAY=3
UI_DEFAULT_ACTIVE_PANEL=transcript
UI_DEFAULT_CLICK_THROUGH=false

# === ENVIRONMENT ===
NODE_ENV=development
